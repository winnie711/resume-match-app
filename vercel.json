{
  "version": 2,
  "buildCommand": "cd server && npm install",
  "builds": [
    { "src": "server/index.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "server/index.js" },
    { "src": "/(.*)", "dest": "server/index.js" }
  ],
  "functions": {
    "server/index.js": {
      "maxDuration": 30
    }
  }
}
